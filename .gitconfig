[user]
	name = Marko Tadic
	email = tadija@me.com
[core]
	excludesfile = ~/.dotfiles/.gitignore
[push]
	default = simple
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[diff "localizablestrings"]
	textconv = "iconv -f utf-16 -t utf-8"
[alias]
	mergeTo = "!gitmergeto() { export tmp_branch=`git branch | grep '* ' | tr -d '* '` && git checkout $1 && git merge $tmp_branch && git checkout $tmp_branch; unset tmp_branch; }; gitmergeto"
	renameTag = "!sh -c 'set -e;git tag $2 $1; git tag -d $1;git push origin :refs/tags/$1;git push --tags' -"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = ~/.stCommitMsg
[tig "color"]
	cursor = black cyan bold
	title-blur = white black
	title-focus	= black white bold
